<%= form_for @route do |f| %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :railway_station_ids, "Текущая станция."%>
      <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, {multiple: true}%>
    </div>

    <div class="field">
      <%= f.label :train, 'Текущий поезд.' %>
      <%= f.collection_select :train_ids, Train.all, :id, :number %>
    </div>

    <div class="actions">
      <%= f.submit 'Создать' %>
    </div>
<% end %>