<%= form_with(model: @wagon.becomes(Wagon), local: true) do |form| %>
    <%= render 'common/errors', resource: @wagon %>
    <div>
      <%= form.label :type, "Тип вагона" %>
      <%= form.select :type, Wagon::TYPES.invert.map {|k, v| [k.to_s, v]} %>
    </div>

    <%= form.label :top_place, "Кол-во верхних мест" %>
    <%= form.number_field :top_place, min: 0, max: 4 %>

    <%= form.label :place_down, "Кол-во нижних мест" %>
    <%= form.number_field :bottom_place, min: 0, max: 4 %>

    <%= form.label :seat_place, "Кол-во сидячих мест" %>
    <%= form.number_field :seat_place, min: 0, max: 4 %>

    <%= form.label :side_bottom_place, "Кол-во нижних боковых мест" %>
    <%= form.number_field :side_bottom_place, min: 0, max: 2 %>

    <%= form.label :side_top_place, "Кол-во верхних боковых мест" %>
    <%= form.number_field :side_top_place, min: 0, max: 2 %>

    <div>
      <%= form.label :train, "Выберите поезд к которому прицепить вагон" %>
      <%= form.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="actions">
      <%= form.submit "#{ @wagon.becomes(Wagon).new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>