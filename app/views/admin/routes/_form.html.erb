<%= form_with(model: [:admin, @route], local: true) do |f| %>

    <% render 'common/errors', resource: @route %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, id: :route_title %>
    </div>

    <div class="field">
      <%= f.label :train, 'Текущий поезд.' %>
      <%= f.collection_select :train_ids, Train.all, :id, :number %>
    </div>

    <div class="actions">
      <%= f.submit "#{@route.new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>

